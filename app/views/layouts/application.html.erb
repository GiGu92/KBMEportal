<!DOCTYPE html>
<html>
<head>
  <title>KBMEportal</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

  <script>
      $(document).ready(function(){
          $('.dropdown-toggle').dropdown()
      });
  </script>

</head>
<body>
<div id="page">
  <nav class="navbar navbar-default", id="header">
    <div class="container-fluid">
      <div class="navbar-header" id="logo">
        <%= link_to "KBME portál", '/', class: "navbar-brand",  id:"logo" %>
      </div>
      <div class="collapse navbar-collapse" id="menu">
        <ul class="nav navbar-nav navbar-right">
          <li class="<%= is_active?("/") %>"> <%= link_to "Info", '/' %> </li>
          <% if !logged_in? %>
              <li class="<%= is_active?("/users/login") %>"><%= link_to "Bejelentkezés", '/users/login'  %></li>
          <% else %>
              <li class="<%= is_active?("/rating/show") %>"> <%= link_to "Értékelés", '/rating/show' %> </li>
              <li class="<%= is_active?("/evaluation/show") %>"> <%= link_to "Bírálás", '/evaluation/show' %> </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Teszt Elek <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to "Profil", '/users/profile' %></li>
                  <li class="divider"></li>
                  <li><a href="#">Kijelentkezés</a></li>
                </ul>
              </li>
          <% end %>

        </ul>
      </div>
    </div>
  </nav>


  <div id="main" class="col-md-12">
    <%= yield %>

  </div>
</div>
<div id="footer">
  <small>
    Copyright @ 2015
  </small>
</div>

</body>
</html>
